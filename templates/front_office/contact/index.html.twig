{% extends 'front_office/base.html.twig' %}

{% block title %}{{ parent() }} | Contact{% endblock %}

{% block section %}
    <h1>Contact</h1>
    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div id="error_form_contact" class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}    
            <div class="form-error">
                {{ form_errors(form) }}
            </div>

            {{ form_row(form.nom) }}
            {{ form_row(form.adresseMail) }}
            {{ form_row(form.message) }}

            <div id="g-recaptcha" style="width: 304px; height: 78px;"></div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Envoyer</button> 
            </div>
    {{ form_end(form) }}   
{% endblock %}

{% block javascripts %}   
    {{ parent() }}
    <script id = "script-recaptcha" src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"></script> 
{% endblock %}
