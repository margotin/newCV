{% extends 'front_office/base.html.twig' %}

{% block title %} {{ parent() }} | Connexion au site{% endblock %}

{% block section %}
   <h1>Connexion</h1>
    

    {% if hasError %}
        <div id="error_form_auth" class="alert alert-danger">L'email ou le mot de passe est invalide !</div>
    {% endif %}
    

    <form class="d-flex justify-content-start flex-wrap" action="{{ path('account_login') }}" method="POST">
        <div class="form-group mr-2">                
            <input type="text" name="_username" id="email" class="form-control" placeholder="Email..." required>
        </div>
        <div class="form-group mr-2">                
            <input type="password" name="_password" id="password" class="form-control" placeholder="Password..." required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-primary">Connexion</button>
        </div>
    </form> 
{% endblock %}
