<h2>{{ title }}</h2>
<hr>

{% form_theme form 'back_office/experience/_form_theme.html.twig' %} 

{{ form_start(form) }}
    
    <div class="form-error">
        {{ form_errors(form) }}
    </div>

    {{ form_row(form.title) }}
    {{ form_row(form.location) }}
    {{ form_row(form.company) }}        
    {{ form_row(form.startAt) }}
    {{ form_row(form.endAt) }}
    {{ form_row(form.works) }} 
    

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">{{ action }}</button>
        <a href="{{ path('manage_experience') }}" class="btn btn-secondary">Retour</a>
    </div>

{{ form_end(form) }}


