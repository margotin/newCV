<script>
     $(document).ready(function() {
        $('.js-datepicker').datepicker({
            format: 'MM yyyy',
            language: 'fr',
            startView : 'months',
            minViewMode : 'months',
            autoclose: true,
            todayHighlight:true,
            todayBtn:true
        });
    });

    $(document).on('change', '.custom-file-input', function () {
    let fileName = $(this).val().replace(/\\/g, '/').replace(/.*\//, '');
    $(this).parent('.custom-file').find('.custom-file-label').text(fileName);
});
    </script>