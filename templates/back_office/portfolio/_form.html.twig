<h2>{{ title }}</h2>
<hr>

{{ form_start(form) }}
    
        <div class="form-error">
            {{ form_errors(form) }}
        </div>

        {{ form_row(form.title) }}

        <div class="form-group">
            {% if action == 'Modifier' %}    
                {{ form_label(form.image) }}
                {{ form_widget(form.image) }}
                {{ form_help(form.image) }}
            {% else %}
                {{ form_label(form.image) }}
                {{ form_widget(form.image) }}
            {% endif %}
        </div>
    
        {{ form_row(form.usedTechnologies) }}
        {{ form_row(form.createdAt) }}
        {{ form_row(form.siteUrl) }}
        {{ form_row(form.githubUrl) }}
       

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">{{ action }}</button>
            <a href="{{ path('manage_portfolio') }}" class="btn btn-secondary">Retour</a>
        </div>

{{ form_end(form) }}
